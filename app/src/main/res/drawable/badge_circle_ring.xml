<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer ring -->
    <item>
        <shape android:shape="oval">
            <size android:width="64dp" android:height="64dp"/>
            <solid android:color="#00000000"/>
            <stroke android:width="2dp" android:color="#88A5B1"/> <!-- warna ring -->
        </shape>
    </item>

    <!-- Inner soft background (opsional, biar ada warna lembut di dalam) -->
    <item
        android:top="2dp" android:bottom="2dp"
        android:left="2dp" android:right="2dp">
        <shape android:shape="oval">
            <solid android:color="#FFF7F0"/> <!-- ganti sesuai selera -->
        </shape>
    </item>
</layer-list>
